<h1>Listing projects</h1>
<h2>ATTENTION: Only if you have the right to click a button, the button is able to be clicked!</h2>
<% if current_user.admin? %>
<p><b><u><%= link_to 'New Project', new_project_path %></u></b></p>
<% end %>

<table align="left" border="2">
  <thead>
  <tr>
    <td align="center">Title</td>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @projects.each do |p| %>
      <tr>
        <td width="150" align="center"><%= p.title %></td>
        <td width="100" align="center"><u><b><%= link_to 'Show', project_path(p)%></b></u></td>
        <td width="100" align="center">
            <% if current_user.project_id == p.id || current_user.admin %>
              <u><b><%= link_to 'Edit  ', edit_project_path(p)%></b></u>
             <% else %>
                Edit
            <% end %>
        </td>
        <td width="100" align="center">
          <% if current_user.admin? || current_user.project_id == p.id%>
              <u><b><%= link_to 'Destroy  ', project_path(p), method: :delete,data:{confirm: 'Are you sure?'}%></b></u>
          <% else %>
             Destroy
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
