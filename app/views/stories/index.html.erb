<h1>Listing stories</h1>
<h2>Stories</h2>
<% @stories.each do |story| %>
    <p>
      <strong>Title:</strong>
      <%= story.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= story.description %>
    </p>

    <p>
      <strong>Point:</strong>
      <%= story.point %>
    </p>

    <p>
      <strong>Stage:</strong>
      <%= story.stage %>
    </p>

    <p>
      <strong>Developer:</strong>
      <% story.users.each do |u| %>
        <p>Name:<%= u.name %></p>
        <p>Email:<%= u.email %></p>
    <% end %>
    </p>
    <p>
      <% if current_user&&!current_user.admin? && @project.id == current_user.project_id &&current_user.story_id ==nil&& story.users.count<2 %>
          <%= link_to 'Sign up', project_story_path(@project, story)%>
      <% end %>
      <% if current_user&&!current_user.admin? && @project.id == current_user.project_id &&current_user.story_id ==nil&& story.users.count==2 %>
          <%= link_to 'Replace', project_story_path(@project, story)%>
      <% end %>
      <% if current_user&& !current_user.admin? && @project.id == current_user.project_id %>
          <%= link_to 'Edit', edit_project_story_path(@project, story)%>
      <% end %>

      <% if current_user&&!current_user.admin? && @project.id == current_user.project_id %>
          <%= link_to 'Destroy Story',[story.project,story],method: :delete, data:{confirm: 'are you sure?'}%>
      <% end%>
    </p>
    <p>---------------------------</p>
<% end %>
<% if current_user&& !current_user.admin? && @project.id == current_user.project_id %>
<%= render 'form' %>
<% end %>
<%= link_to 'Back', @project%>